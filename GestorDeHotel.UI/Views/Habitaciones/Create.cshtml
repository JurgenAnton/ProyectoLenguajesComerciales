@model GestorDeHotel.Model.InformacionDeHabitacion

@{
    ViewData["Title"] = "Habitación";
}

<h2>Nueva habitación</h2>

<h4>Información de habitación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
           
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoHabitacion" class="control-label"></label>

                <select asp-for="IdTipoHabitacion" class="form-control">
                        @foreach (var item in Model.ListaDeTiposHabitacion)
                        {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
                <span asp-validation-for="IdTipoHabitacion" class="text-danger"></span>
            </div>
          

            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
